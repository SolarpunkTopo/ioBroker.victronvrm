        "VenusIP": {
          "type": "text",
          "label": "IP Adresse der Venus/Cerbo GX",
          "sm": 3
        },
        "xlsxUrl": {
          "type": "text",
		  "default": "https://raw.githubusercontent.com/victronenergy/dbus_modbustcp/master/CCGX-Modbus-TCP-register-list.xlsx",
